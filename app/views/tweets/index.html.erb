<div class="row">
  <div class="col-xs-3 col-xs-offset-1">
    <%= image_tag 'tweety.gif', class: "img-responsive" %>


    <%= form_for :tweet, url: '/tweets', html: {id: 'new-tweet-form'}, method: 'post' do |f| %>
      <h3>New Tweet</h3>
      <div class="form-group">
        <label for="username">Username</label>
        <%= f.text_field :username, html: {class: "form-control", id: "username"} %>
      </div>

      <div class="form-group">
        <label for="tweet-content">Say Something</label>
        <%= f.text_area :content, html: {class: "form-control", id: "tweet-content", rows: "4", placeholder: "What's on your mind?"} %>
      </div>
      <%= f.submit "Submit", html: {class: "btn btn-primary"} %>
    <% end %>

  </div>

  <div class="col-xs-4">
    <h2>Your Timeline</h2>

    <% @tweets.each do |tweet| %>
      <div class="media">
        <div class="media-left">
          <a href="#"><img class="media-object" src="<%=tweet.avatar_url%>"></a>
        </div>
        <div class="media-body">
          <%= link_to "#{tweet.username}", "http://tweety.com/#{tweet.username}" %> <%= tweet.content %>
        </div>
      </div>
    <% end %>
  </div>
</div>
