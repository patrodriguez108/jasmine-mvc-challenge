<%= form_for :tweet, url: '/tweets', html: {id: 'new-tweet-form'}, method: 'post', remote: true, authenticity_token: true do |f| %>
  <h3>New Tweet</h3>
  <div class="form-group">
    <label for="username">Username</label>
    <%= f.text_field :username, html: {class: "form-control", id: "username"} %>
  </div>

  <div class="form-group">
    <label for="tweet-content">Say Something</label>
    <%= f.text_area :content, html: {class: "form-control", id: "tweet-content", rows: "4", placeholder: "What's on your mind?"} %>
  </div>
  <%= f.submit "Submit", html: {class: "btn btn-primary"} %>
<% end %>